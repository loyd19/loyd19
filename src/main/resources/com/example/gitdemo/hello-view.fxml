<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="464.0" prefWidth="349.0" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.login.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <ImageView fitHeight="196.0" fitWidth="188.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@logo2.png" />
        </image>
    </ImageView>

    <Label fx:id="welcomeText" alignment="TOP_LEFT" text="Log In" textFill="#01278a">
        <VBox.margin>
            <Insets right="250.0" top="20.0" />
        </VBox.margin>
        <font>
            <Font size="20.0" />
        </font></Label>
    <TextField promptText="Phone Number /  Username / Email" />
    <AnchorPane prefHeight="30.0" prefWidth="309.0">
        <children>
            <PasswordField prefHeight="25.0" prefWidth="309.0" promptText="Password" />
            <ImageView fitHeight="32.0" fitWidth="39.0" layoutX="270.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@eyes.png" />
                </image>
            </ImageView>
        </children>
    </AnchorPane>
    <TextField alignment="TOP_CENTER" prefHeight="25.0" prefWidth="199.0" text="LOG IN">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin></TextField>
    <Hyperlink text="Forgot Password">
        <VBox.margin>
            <Insets bottom="-300.0" left="-10.0" right="200.0" top="-20.0" />
        </VBox.margin>
    </Hyperlink>
    <AnchorPane prefHeight="33.0" prefWidth="309.0">
        <children>
            <TextField alignment="TOP_CENTER" text="Facebook" />
            <ImageView fitHeight="23.0" fitWidth="21.0" layoutX="14.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@face.png" />
                </image>
            </ImageView>
            <TextField alignment="TOP_CENTER" layoutX="155.0" layoutY="1.0" text="Google" />
            <ImageView fitHeight="21.0" fitWidth="21.0" layoutX="168.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@google.png" />
                </image>
            </ImageView>
        </children>
        <VBox.margin>
            <Insets top="300.0" />
        </VBox.margin>
    </AnchorPane>
    <Hyperlink text="Sign Up">
        <graphic>
            <Label alignment="TOP_RIGHT" text="New to Old Shoes?" textFill="#1e1e1e" />
        </graphic>
    </Hyperlink>
</VBox>
